{
  "openapi": "3.0.0",
  "info": {
    "title": "Auto Package Deployer",
    "version": "1.0.0",
    "description": "This is the API documentation for the Auto Package Deployer",
    "contact": {
      "name": "Dokdogalmaegi",
      "url": "https://github.com/dokdogalmaegi",
      "email": "dokdogalmaegi@gmail.com"
    },
    "license": {
      "name": "MIT",
